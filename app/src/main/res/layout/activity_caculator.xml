<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_caculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rom.calculator.CAculator">

    <Button
        android:text="1"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button1"
        android:layout_above="@+id/button0" />

    <Button
        android:text="2"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button2"
        android:layout_toRightOf="@+id/button1"
        android:layout_above="@+id/button0" />
    <Button
        android:text="3"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button3"
        android:layout_toRightOf="@+id/button2"
        android:layout_above="@+id/button0" />
    <Button
        android:text="4"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button4"
        android:layout_above="@+id/button1"
         />

    <Button
        android:text="5"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_above="@+id/button1" />
    <Button
        android:text="6"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button6"
        android:layout_toRightOf="@+id/button5"
        android:layout_above="@+id/button1" />
    <Button
        android:text="7"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button7"
        android:layout_above="@+id/button4" />

    <Button
        android:text="8"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button8"
        android:layout_toRightOf="@+id/button7"
        android:layout_above="@+id/button4" />
    <Button
        android:text="9"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button9"
        android:layout_toRightOf="@+id/button8"
        android:layout_above="@+id/button4" />

    <Button
        android:text="clear"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button7"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonclear"
        android:layout_toStartOf="@+id/button8" />

    <Button
        android:text="DEL"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button8"
        android:layout_marginStart="11dp"
        android:id="@+id/buttondel"
        android:layout_toStartOf="@+id/button9" />

    <Button
        android:text="0"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:textSize="20dp"
        android:id="@+id/button0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SQRT"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonsq"
        android:layout_above="@+id/button9"
        android:layout_toEndOf="@+id/buttondel" />

    <Button
        android:text="."
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/buttondot"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:text="00"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/button00"
        android:layout_alignBaseline="@+id/button0"
        android:layout_alignBottom="@+id/button0"
        android:layout_toEndOf="@+id/button0" />

    <Button
        android:text="="
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/buttonequal"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="/"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:id="@+id/buttondiv"
        android:textSize="20dp"
        android:layout_above="@+id/buttonequal"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="*"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:textSize="20dp"
        android:id="@+id/buttonmul"
        android:layout_above="@+id/buttondiv"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="-"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:textSize="20dp"
        android:id="@+id/buttonsub"
        android:layout_above="@+id/buttonmul"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="+"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:textSize="20dp"
        android:id="@+id/buttonplus"
        android:layout_alignTop="@+id/buttonsq"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:text="00"
        android:textSize="75dp"
        android:textAlignment="textEnd"
        android:layout_above="@+id/buttonclear"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/textview2"/>

    <TextView
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:text="00"
        android:textSize="50dp"
        android:textAlignment="textEnd"
        android:id="@+id/textview1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

</RelativeLayout>
